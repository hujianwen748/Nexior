    <script>
        // 导航栏滚动效果
        window.addEventListener('scroll', function() {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('py-2', 'shadow-lg');
                navbar.classList.remove('py-3');
            } else {
                navbar.classList.add('py-3');
                navbar.classList.remove('py-2', 'shadow-lg');
            }
        });
        
        // 移动端菜单
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        
        mobileMenuBtn.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
        });
        
        // 用户菜单
        const userMenuBtn = document.getElementById('userMenuBtn');
        const userMenu = document.getElementById('userMenu');
        
        userMenuBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            userMenu.classList.toggle('hidden');
        });
        
        document.addEventListener('click', function() {
            userMenu.classList.add('hidden');
        });
        
        // 筛选按钮
        const filterBtns = document.querySelectorAll('.filter-btn');
        filterBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                filterBtns.forEach(b => {
                    b.classList.remove('active', 'bg-primary');
                    b.classList.add('bg-dark', 'hover:bg-dark/80');
                });
                this.classList.add('active', 'bg-primary');
                this.classList.remove('bg-dark', 'hover:bg-dark/80');
            });
        });
        
        // 排行按钮
        const trendBtns = document.querySelectorAll('.trend-btn');
        trendBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                trendBtns.forEach(b => {
                    b.classList.remove('active', 'bg-primary');
                    b.classList.add('bg-dark-light', 'hover:bg-dark-light/80');
                });
                this.classList.add('active', 'bg-primary');
                this.classList.remove('bg-dark-light', 'hover:bg-dark-light/80');
            });
        });
        
        // 游戏详情模态框
        const gameDetailsLinks = document.querySelectorAll('a[href="#game-details"]');
        const gameDetailsModal = document.getElementById('game-details');
        const closeModal = document.getElementById('closeModal');
        const modalOverlay = document.getElementById('modalOverlay');
        
        gameDetailsLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                gameDetailsModal.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            });
        });
        
        function closeDetailsModal() {
            gameDetailsModal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }
        
        closeModal.addEventListener('click', closeDetailsModal);
        modalOverlay.addEventListener('click', closeDetailsModal);
        
        // 发布游戏模态框
        const publishBtn = document.getElementById('publishBtn');
        const developerPublishBtn = document.getElementById('developerPublishBtn');
        const publishModal = document.getElementById('publishModal');
        const closePublishModal = document.getElementById('closePublishModal');
        const publishOverlay = document.getElementById('publishOverlay');
        const publishForm = document.getElementById('publishForm');
        
        function openPublishModal() {
            publishModal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }
        
        publishBtn.addEventListener('click', openPublishModal);
        developerPublishBtn.addEventListener('click', openPublishModal);
        
        function closePublishModalFunc() {
            publishModal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }
        
        closePublishModal.addEventListener('click', closePublishModalFunc);
        publishOverlay.addEventListener('click', closePublishModalFunc);
        
        publishForm.addEventListener('submit', function(e) {
            e.preventDefault();
            alert('资源发布申请已提交，等待审核！');
            closePublishModalFunc();
        });
        
        // 分类多选功能
        const categoryCheckboxes = document.querySelectorAll('input[name="category"]');
        categoryCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const label = this.closest('label');
                if (this.checked) {
                    label.classList.add('tag-selected');
                } else {
                    label.classList.remove('tag-selected');
                }
            });
        });
        
        // 截图上传预览功能
        const screenshotUpload = document.getElementById('screenshotImages');
        const screenshotsPreview = document.getElementById('screenshotsPreview');
        
        screenshotUpload.addEventListener('change', function() {
            // 显示预览区
            screenshotsPreview.classList.remove('hidden');
            
            // 实际项目中这里会处理上传的图片并显示预览
            // 这里仅做演示
        });
        
        // 移除截图功能
        document.addEventListener('click', function(e) {
            if (e.target.closest('.remove-screenshot')) {
                const screenshot = e.target.closest('.relative');
                screenshot.remove();
                
                // 如果没有截图了，隐藏预览区
                if (screenshotsPreview.children.length === 0) {
                    screenshotsPreview.classList.add('hidden');
                }
            }
        });
        
        // 添加下载链接功能
        const addDownloadLinkBtn = document.getElementById('addDownloadLink');
        const downloadLinksContainer = document.getElementById('downloadLinksContainer');
        
        addDownloadLinkBtn.addEventListener('click', function() {
            const newLinkDiv = document.createElement('div');
            newLinkDiv.className = 'flex items-center gap-3';
            newLinkDiv.innerHTML = `
                <input type="url" placeholder="输入下载链接" class="flex-grow bg-dark border border-gray-700 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all">
                <input type="text" placeholder="链接说明" class="w-36 bg-dark border border-gray-700 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all">
                <button type="button" class="text-gray-custom hover:text-red-400 transition-colors remove-link">
                    <i class="fa fa-trash"></i>
                </button>
            `;
            downloadLinksContainer.appendChild(newLinkDiv);
        });
        
        // 移除下载链接功能
        document.addEventListener('click', function(e) {
            if (e.target.closest('.remove-link') && downloadLinksContainer.children.length > 1) {
                const linkDiv = e.target.closest('.flex');
                linkDiv.remove();
            }
        });
        
        // 图表初始化
        window.addEventListener('load', function() {
            const ctx = document.getElementById('categoryChart').getContext('2d');
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['手机游戏', '电脑游戏', '解压教程', '模拟器'],
                    datasets: [{
                        data: [45, 30, 15, 10],
                        backgroundColor: [
                            '#7C3AED',
                            '#EC4899',
                            '#3B82F6',
                            '#10B981'
                        ],
                        borderWidth: 0,
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: '#94A3B8',
                                padding: 15,
                                font: {
                                    size: 12
                                }
                            }
                        }
                    },
                    cutout: '65%'
                }
            });
        });
        
        // 平滑滚动
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                if (this.getAttribute('href') === '#') return;
                
                e.preventDefault();
                const targetId = this.getAttribute('href');
                if (targetId === '#game-details' || targetId === '#publishModal') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                    
                    // 如果是移动端，点击后关闭菜单
                    if (!mobileMenu.classList.contains('hidden')) {
                        mobileMenu.classList.add('hidden');
                    }
                }
            });
        });
    </script>
</body>
</html>
    
